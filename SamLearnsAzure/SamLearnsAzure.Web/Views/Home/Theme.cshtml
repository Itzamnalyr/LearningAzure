@using SamLearnsAzure.Models
@model ThemeViewModel
@{
    ViewData["Title"] = "Browse";
}

<h2>Environment: @Model.Environment</h2>
<h3>Theme</h3>
<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-bordered">
            <tr>
                <th>Set name</th>
                <th>Year</th>
                <th>Theme</th>
                <th>Number of parts</th>
            </tr>
            @foreach (Sets item in Model.Sets)
            {
                <tr>
                    <td>
                        <a href="~/Home/Set?setnum=@item.SetNum">@item.Name</a> (@item.Year)
                    </td>
                    <td>
                        @item.Year
                    </td>
                    <td>
                        @item.Theme.Name
                    </td>
                    <td>
                        @(item.NumParts.ToString("#,##0"))
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
