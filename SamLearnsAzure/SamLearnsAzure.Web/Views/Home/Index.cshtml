@using SamLearnsAzure.Models
@model IndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

<h2>Environment: @Model.Environment</h2>

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-bordered">
            <tr>
                <th>Set name</th>
                <th>Year</th>
                <th>Theme</th>
                <th>Number of parts</th>
            </tr>
            @foreach (OwnerSets item in Model.OwnerSets)
            {
                <tr>
                    <td>
                        <a href="~/Home/Set?setNum=@item.SetNum">@item.Set.Name</a>
                    </td>
                    <td>
                        @item.Set.Year
                    </td>
                    <td>
                        @item.Set.Theme.Name
                    </td>
                    <td>
                        @(item.Set.NumParts.ToString("#,##0"))
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
