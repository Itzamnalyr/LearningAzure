{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "webSiteName": {
      "type": "string"
    },
    "hostingPlanName": {
      "type": "string"
    },
    "storageAccountName": {
      "type": "string"
    },
    "websiteDomainName": {
      "type": "string"
    },
    "letsEncryptUniqueRoleAssignmentGuid": {
      "type": "string",
      "defaultValue": "6e4cff57-e63a-403e-822c-e98e5ba02145",
      "metadata": {
        "description": "A Guid that will serve as the name for the roleAssignment. Should be unique and remain constant"
      }
    },
    "contactEmailAddress": {
      "type": "string"
    },
    "letsEncryptAppServiceContributerClientId": {
      "type": "string",
      "defaultValue": "c6193b13-08e7-4519-b7b4-e6b1875b15a8",
      "metadata": {
        "description": "ClientId of the Service Principal that the LetsEncrypt extension should use"
      }
    },
    "letsEncryptAppServiceContributorObjectId": {
      "type": "string",
      "defaultValue": "ca1af823-ed55-4cca-a202-1bee11370834",
      "metadata": {
        "description": "ObjectId of the Service Principal that the LetsEncrypt extension should use"
      }
    },
    "letsEncryptAppServiceContributerClientSecret": {
      "type": "string",
      "metadata": {
        "description": "ClientSecret of the Service Principal that the LetsEncrypt extension should use -- Pro tip: DO NOT CHECK THIS INTO SOURCE CONTROL, USE A KEY VAULT"
      }
    },
    "letsEncryptRoleAssignmentId": {
      "type": "string",
      "defaultValue": "b24988ac-6180-42a0-ab88-20f7382dd24c",
      "metadata": {
        "description": "The unique string for the role assignment of the let's encrypt user"
      }
    }
  },
  "variables": {
  },
  "resources": [
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2018-11-01",
      "name": "[parameters('webSiteName')]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
      ],
      "kind": "app",
      "tags": {
        "[concat('hidden-related:', resourceGroup().id, '/providers/Microsoft.Web/serverfarms/', parameters('hostingPlanName'))]": "empty",
        "displayName": "Web Service Webapp"
      },
      "properties": {
        "name": "[parameters('webSiteName')]",
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('hostingPlanName'))]",
        "httpsOnly": true,
        "siteConfig": {
          "alwaysOn": true,
          "connectionStrings": [
            {
              "name": "AzureWebJobsDashboard",
              "connectionString": "[concat('DefaultEndpointsProtocol=https;AccountName=',parameters('storageAccountName'),';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName')), providers('Microsoft.Storage', 'storageAccounts').apiVersions[0]).keys[0].value,';EndpointSuffix=core.windows.net')]",
              "type": "Custom"
            },
            {
              "name": "AzureWebJobsStorage",
              "connectionString": "[concat('DefaultEndpointsProtocol=https;AccountName=',parameters('storageAccountName'),';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName')), providers('Microsoft.Storage', 'storageAccounts').apiVersions[0]).keys[0].value,';EndpointSuffix=core.windows.net')]",
              "type": "Custom"
            },
            {
              "name": "StorageConnectionString",
              "connectionString": "[concat('DefaultEndpointsProtocol=https;AccountName=',parameters('storageAccountName'),';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName')), providers('Microsoft.Storage', 'storageAccounts').apiVersions[0]).keys[0].value,';EndpointSuffix=core.windows.net')]",
              "type": "Custom"
            }
          ],
          "appSettings": [
            {
              "name": "letsencrypt:Tenant",
              "value": "[subscription().tenantId]"
            },
            {
              "name": "letsencrypt:SubscriptionId",
              "value": "[subscription().subscriptionId]"
            },
            {
              "name": "letsencrypt:ResourceGroupName",
              "value": "[resourceGroup().name]"
            },
            {
              "name": "letsencrypt:ServicePlanResourceGroupName",
              "value": "[resourceGroup().name]"
            },
            {
              "name": "letsencrypt:ClientId",
              "value": "[parameters('letsEncryptAppServiceContributerClientId')]"
            },
            {
              "name": "letsencrypt:ClientSecret",
              "value": "[parameters('letsEncryptAppServiceContributerClientSecret')]"
            },
            {
              "name": "letsencrypt:HostNames",
              "value": "[parameters('websiteDomainName')]"
            },
            {
              "name": "letsencrypt:Email",
              "value": "[parameters('contactEmailAddress')]"
            }
          ]
        }
      },
      "resources": [
        {
          "apiVersion": "2018-11-01",
          "type": "slots",
          "name": "Staging",
          "location": "[resourceGroup().location]",
          "dependsOn": [
            "[parameters('webSiteName')]"
          ],
          "kind": "app",
          "properties": {}
        },
        {
          "type": "Microsoft.Web/sites/hostNameBindings",
          "name": "[concat(parameters('webSiteName'),'/',parameters('websiteDomainName'))]",
          "apiVersion": "2018-11-01",
          "location": "[resourceGroup().location]",
          "tags": {
            "displayName": "Website hostname binding"
          },
          "properties": {
            "siteName": "[parameters('webSiteName')]"
          },
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites', parameters('webSiteName'))]"
          ]
        },
        {
          "type": "siteextensions",
          "apiVersion": "2018-11-01",
          "name": "letsencrypt",
          "dependsOn": [
            "[parameters('webSiteName')]"
          ],
          "properties": {}
        }
      ]
    },
    {
      "type": "Microsoft.Authorization/roleAssignments",
      "apiVersion": "2017-09-01",
      "name": "[parameters('letsEncryptUniqueRoleAssignmentGuid')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/Sites', parameters('webSiteName'))]"
      ],
      "properties": {
        "roleDefinitionId": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Authorization/roleDefinitions/', parameters('letsEncryptRoleAssignmentId'))]",
        "principalId": "[parameters('letsEncryptAppServiceContributorObjectId')]"
      },
      "tags": {
        "displayName": "Website authorization"
      }
    }
  ]
}
