  "contentVersion": "1.0.0.0",
  "parameters": {
    "serviceAPIName": {
      "type": "string"
    },
    "hostingPlanName": {
      "type": "string"
    },
    "actionGroupName": {
      "type": "string"
    },
    "sqlServerName": {
      "type": "string"
    },
    "sqlServerAddress": {
      "type": "string"
